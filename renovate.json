{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": ["gomodTidy"],
  "docker-compose": {
    "managerFilePatterns": ["/(^|/)(?:podman-)?compose[^/]*\\.ya?ml$/"]
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "postUpgradeTasks": {
        "commands": [
          "go generate ./...",
          "go tool golangci-lint run ./... --fix",
          "go tool buf format -w",
          "go tool buf dep update"
        ],
        "executionMode": "branch"
      }
    },
    {
      "matchManagers": ["gomod"],
      "groupName": "uptrace/bun",
      "postUpgradeTasks": {
        "commands": ["go get -u github.com/a-novel-kit/golib"],
        "executionMode": "branch"
      }
    },
    {
      "matchManagers": ["npm"],
      "postUpgradeTasks": {
        "commands": ["pnpm format"],
        "executionMode": "branch"
      }
    }
  ],
  "extends": ["config:recommended"]
}
